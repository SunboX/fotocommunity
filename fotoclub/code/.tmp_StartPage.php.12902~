<?php

class StartPage extends Page
{
	static $db = array(
		'Top-Text' => 'HTMLText',
		'Bottom-Text' => 'HTMLText'
	);
	
	function getCMSFields()
	{
		$fields = parent::getCMSFields();
		
		$fields->removeFieldFromTab('Root.Content.Main', 'Content');
		
		$fields->addFieldToTab('Root.Content.Main', new HtmlEditorField('Top-Text'));
		$fields->addFieldToTab('Root.Content.Main', new HtmlEditorField('Bottom-Text'));
		
		return $fields;
	}	
}

class StartPage_Controller extends Page_Controller
{
	
}